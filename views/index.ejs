<%- include("partials/header.ejs") %>

<main class="text-bg-dark p-3">
  <div class="row m-0">
    <div class="hero-section container col-md-6 p-5">
      <h1 class="display-5 fw-bold px-5">Welcome to Blog Web Application</h1>
      <div class="px-5">
        <p class="lead mb-4">Welcome to the BlogWebApp where you can find valuable tips, inspiration, and updates about writing from your fellow creators and content experts.</p>
        <a class="btn btn-outline-info btn-lg px-4 gap-3" href="/create">Write Your Blog!</a>
      </div>
    </div>
    <div class="col-md-6">

    </div>
  </div>
  <div class="row m-0">
    <div class="blogs-section container p-5">
      <% if (blogs.length > 0) { %>
        <h2 class="display-6 fw-bold px-5">Recent Blogs</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4 px-5 mt-0">
          <% blogs.forEach(function(blogPost, index) { %>
            <div class="col">
              <div class="card text-bg-secondary border-info h-100 shadow-lg">
                <div class="card-body">
                  <h5 class="card-title fs-3 fw-bold"><%= blogPost.title %></h5>
                  <p class="card-text"><%= blogPost.content %></p>
                </div>
                <div class="d-flex gap-2 p-3">
                  <form action="/load" method="POST">
                    <input type="hidden" name="id" value="<%= index %>">
                    <button type="submit" class="btn btn-warning mb-3">Update</button>
                  </form>
                  <form action="/delete" method="POST">
                    <input type="hidden" name="id" value="<%= index %>">
                    <button type="submit" class="btn btn-danger mb-3">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <h2 class="display-6 fw-bold px-5">No blogs found. <a href="/create">Can you write one?</a></h2>
      <% } %>
    </div>
  </div>
</main>

<%- include("partials/footer.ejs") %>
