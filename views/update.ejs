<%- include("partials/header.ejs") %>

<main class="text-bg-dark p-3">
    <div class="container p-5">
        <form action="/update/<%= id %>" method="POST">
            <div class="mb-3">
                <label for="titleBlog" class="form-label">Blog Title</label>
                <input type="text" class="form-control" name="titleBlog" value="<%= blog.title %>">
            </div>
            <div class="mb-3">
                <label for="contentBlog" class="form-label">Blog Content</label>
                <textarea class="form-control" name="contentBlog" rows="5"><%= blog.content %></textarea>
            </div>
            <div class="mb-3">
              <button type="submit" class=" mb-3">Update</button>
            </div>
        </form>
    </div>
</main>

